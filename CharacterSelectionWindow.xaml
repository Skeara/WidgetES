<Window x:Class="WidgetES.CharacterSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WidgetES"
        mc:Ignorable="d"
        ShowInTaskbar="False"
        Title="Настройки"
        Height="500" Width="750"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F5F5" Icon="/mozimer.ico">
    <Window.Resources>
        <!-- Стиль кнопки персонажа -->
        <Style x:Key="CharacterButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="8"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#4A7C59"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="SelectedButtonStyle" TargetType="Button" BasedOn="{StaticResource CharacterButtonStyle}">
            <Setter Property="BorderBrush" Value="#4A7C59"/>
            <Setter Property="BorderThickness" Value="3"/>
        </Style>

        <!-- Стиль текстового поля -->
        <Style x:Key="SettingsTextBox" TargetType="TextBox">
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0"
                   Text="Настройки"
                   FontSize="24"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- Основная сетка: Лево — персонажи, Право — настройки -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <!-- Персонажи -->
                <ColumnDefinition Width="1.2*"/>
                <!-- Настройки -->
            </Grid.ColumnDefinitions>

            <!-- === ЛЕВАЯ ЧАСТЬ: ПЕРСОНАЖИ === -->
            <ScrollViewer Grid.Column="0"
              VerticalScrollBarVisibility="Auto"
              HorizontalScrollBarVisibility="Disabled"
              Margin="0,0,10,0">
                <Grid x:Name="CharactersGrid">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Строки будут добавлены автоматически под контент -->
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Персонаж 1 -->
                    <Button Grid.Row="0" Grid.Column="0"
                x:Name="Character1Button"
                Style="{StaticResource CharacterButtonStyle}"
                Click="Character1Button_Click">
                        <StackPanel>
                            <Border Background="White" MinHeight="130" CornerRadius="5" Margin="5">
                                <Image x:Name="Character1Image" Stretch="Uniform"/>
                            </Border>
                            <TextBlock Text="Лилия (Проект «Оранжевый»)" 
                           HorizontalAlignment="Center" 
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           Margin="0,5,0,0"/>
                        </StackPanel>
                    </Button>

                    <!-- Персонаж 2 -->
                    <Button Grid.Row="0" Grid.Column="1"
                x:Name="Character2Button"
                Style="{StaticResource CharacterButtonStyle}"
                Click="Character2Button_Click">
                        <StackPanel>
                            <Border Background="White" MinHeight="130" CornerRadius="5" Margin="5">
                                <Image x:Name="Character2Image" Stretch="Uniform"/>
                            </Border>
                            <TextBlock Text="Александра (Проект «Оранжевый»)" 
                           HorizontalAlignment="Center" 
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           Margin="0,5,0,0"/>
                        </StackPanel>
                    </Button>

                    <!-- Персонаж 3 -->
                    <Button Grid.Row="1" Grid.Column="0"
                x:Name="Character3Button"
                Style="{StaticResource CharacterButtonStyle}"
                Click="Character3Button_Click">
                        <StackPanel>
                            <Border Background="White" MinHeight="130" CornerRadius="5" Margin="5">
                                <Image x:Name="Character3Image" Stretch="Uniform"/>
                            </Border>
                            <TextBlock Text="Ольга Дмитриевна" 
                           HorizontalAlignment="Center" 
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           Margin="0,5,0,0"/>
                        </StackPanel>
                    </Button>

                    <!-- Персонаж 4 -->
                    <Button Grid.Row="1" Grid.Column="1"
                x:Name="Character4Button"
                Style="{StaticResource CharacterButtonStyle}"
                Click="Character4Button_Click">
                        <StackPanel>
                            <Border Background="White" MinHeight="130" CornerRadius="5" Margin="5">
                                <Image x:Name="Character4Image" Stretch="Uniform"/>
                            </Border>
                            <TextBlock Text="Виола" 
                           HorizontalAlignment="Center" 
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           Margin="0,5,0,0"/>
                        </StackPanel>
                    </Button>

                    <!-- Персонаж 5 -->
                    <Button Grid.Row="2" Grid.Column="0"
                x:Name="Character5Button"
                Style="{StaticResource CharacterButtonStyle}"
                Click="Character5Button_Click">
                        <StackPanel>
                            <Border Background="White" MinHeight="130" CornerRadius="5" Margin="5">
                                <Image x:Name="Character5Image" Stretch="Uniform"/>
                            </Border>
                            <TextBlock Text="Алиса" 
                           HorizontalAlignment="Center" 
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           Margin="0,5,0,0"/>
                        </StackPanel>
                    </Button>

                    <!-- Персонаж 6 -->
                    <Button Grid.Row="2" Grid.Column="1"
                x:Name="Character6Button"
                Style="{StaticResource CharacterButtonStyle}"
                Click="Character6Button_Click">
                        <StackPanel>
                            <Border Background="White" MinHeight="130" CornerRadius="5" Margin="5">
                                <Image x:Name="Character6Image" Stretch="Uniform"/>
                            </Border>
                            <TextBlock Text="Мику" 
                           HorizontalAlignment="Center" 
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           Margin="0,5,0,0"/>
                        </StackPanel>
                    </Button>

                    <!-- Персонаж 7 -->
                    <Button Grid.Row="3" Grid.Column="0"
                x:Name="Character7Button"
                Style="{StaticResource CharacterButtonStyle}"
                Click="Character7Button_Click">
                        <StackPanel>
                            <Border Background="White" MinHeight="130" CornerRadius="5" Margin="5">
                                <Image x:Name="Character7Image" Stretch="Uniform"/>
                            </Border>
                            <TextBlock Text="Лена" 
                           HorizontalAlignment="Center" 
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           Margin="0,5,0,0"/>
                        </StackPanel>
                    </Button>

                    <!-- Персонаж 8 -->
                    <Button Grid.Row="3" Grid.Column="1"
                x:Name="Character8Button"
                Style="{StaticResource CharacterButtonStyle}"
                Click="Character8Button_Click">
                        <StackPanel>
                            <Border Background="White" MinHeight="130" CornerRadius="5" Margin="5">
                                <Image x:Name="Character8Image" Stretch="Uniform"/>
                            </Border>
                            <TextBlock Text="Славя" 
                           HorizontalAlignment="Center" 
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           Margin="0,5,0,0"/>
                        </StackPanel>
                    </Button>

                    <!-- Персонаж 9 -->
                    <Button Grid.Row="4" Grid.Column="0"
                x:Name="Character9Button"
                Style="{StaticResource CharacterButtonStyle}"
                Click="Character9Button_Click">
                        <StackPanel>
                            <Border Background="White" MinHeight="130" CornerRadius="5" Margin="5">
                                <Image x:Name="Character9Image" Stretch="Uniform"/>
                            </Border>
                            <TextBlock Text="Юля" 
                           HorizontalAlignment="Center" 
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           Margin="0,5,0,0"/>
                        </StackPanel>
                    </Button>

                    <!-- Персонаж 10 -->
                    <Button Grid.Row="4" Grid.Column="1"
                x:Name="Character10Button"
                Style="{StaticResource CharacterButtonStyle}"
                Click="Character10Button_Click">
                        <StackPanel>
                            <Border Background="White" MinHeight="130" CornerRadius="5" Margin="5">
                                <Image x:Name="Character10Image" Stretch="Uniform"/>
                            </Border>
                            <TextBlock Text="Ульяна" 
                           HorizontalAlignment="Center" 
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           Margin="0,5,0,0"/>
                        </StackPanel>
                    </Button>

                </Grid>
            </ScrollViewer>



            <!-- === ПРАВАЯ ЧАСТЬ: НАСТРОЙКИ === -->
            <Border Grid.Column="1" Background="#FAFAFA" CornerRadius="10" Padding="15" Margin="10,0,0,-27">
                <StackPanel VerticalAlignment="Top" Height="323">
                    <TextBlock Text="Город для погоды" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBox x:Name="CityTextBox" 
                             Text="Moscow"
                             Style="{StaticResource SettingsTextBox}"
                             Width="180"
                             HorizontalAlignment="Left"/>

                    <TextBlock Text="Тема" FontWeight="SemiBold" Margin="0,15,0,5"/>
                    <ComboBox Width="180" HorizontalAlignment="Left" SelectedIndex="0">
                        <ComboBoxItem>Светлая</ComboBoxItem>
                        <!--<ComboBoxItem>Тёмная</ComboBoxItem>-->
                    </ComboBox>

                    <TextBlock Text="Язык" FontWeight="SemiBold" Margin="0,15,0,5"/>
                    <ComboBox Width="180" HorizontalAlignment="Left" SelectedIndex="0">
                        <ComboBoxItem>Русский</ComboBoxItem>
                        <!--<ComboBoxItem>English</ComboBoxItem>-->
                    </ComboBox>
                    <CheckBox x:Name="TopmostCheckBox"
          Content="Поверх всех окон"
          Margin="0,15,0,5"
          FontWeight="SemiBold"
          Foreground="#333333"/>
                    <CheckBox x:Name="AutoStartCheckBox"
          Content="Автозапуск при старте системы"
          Margin="0,15,0,5"
          FontWeight="SemiBold"
          Foreground="#333333"/>

                    <!-- Заглушка под будущие настройки -->
                    <!--<Button Content="Сбросить настройки" 
                            Width="180" Height="35" 
                            Margin="0,25,0,0"
                            Background="#E74C3C" Foreground="White" 
                            FontWeight="Bold" Cursor="Hand"/>-->
                </StackPanel>
            </Border>
        </Grid>

        <!-- Кнопки OK / Отмена -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,25,0,0">
            <Button Content="OK" Width="110" Height="40" Margin="8"
                    Background="#4A7C59" Foreground="White" FontWeight="Bold"
                    Click="OkButton_Click" Cursor="Hand"/>
            <Button Content="Отмена" Width="110" Height="40" Margin="8"
                    Background="#CCCCCC" Foreground="#333333" FontWeight="Bold"
                    Click="CancelButton_Click" Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>