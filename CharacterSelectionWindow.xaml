<Window x:Class="WidgetES.CharacterSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WidgetES"
        mc:Ignorable="d"
        Title="Настройки"
        Height="500" Width="750"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F5F5">
    <Window.Resources>
        <!-- Стиль кнопки персонажа -->
        <Style x:Key="CharacterButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="8"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#4A7C59"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="SelectedButtonStyle" TargetType="Button" BasedOn="{StaticResource CharacterButtonStyle}">
            <Setter Property="BorderBrush" Value="#4A7C59"/>
            <Setter Property="BorderThickness" Value="3"/>
        </Style>

        <!-- Стиль текстового поля -->
        <Style x:Key="SettingsTextBox" TargetType="TextBox">
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0"
                   Text="Настройки"
                   FontSize="24"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- Основная сетка: Лево — персонажи, Право — настройки -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <!-- Персонажи -->
                <ColumnDefinition Width="1.2*"/>
                <!-- Настройки -->
            </Grid.ColumnDefinitions>

            <!-- === ЛЕВАЯ ЧАСТЬ: ПЕРСОНАЖИ === -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Персонаж 1 -->
                <Button Grid.Row="0" Grid.Column="0"
                        x:Name="Character1Button"
                        Style="{StaticResource CharacterButtonStyle}"
                        Click="Character1Button_Click">
                    <StackPanel>
                        <Border Background="White" Height="130" CornerRadius="5" Margin="5">
                            <Image x:Name="Character1Image" Stretch="Uniform"/>
                        </Border>
                        <TextBlock Text="Персонаж 1" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    </StackPanel>
                </Button>

                <!-- Персонаж 2 -->
                <Button Grid.Row="0" Grid.Column="1"
                        x:Name="Character2Button"
                        Style="{StaticResource CharacterButtonStyle}"
                        Click="Character2Button_Click">
                    <StackPanel>
                        <Border Background="White" Height="130" CornerRadius="5" Margin="5">
                            <Image x:Name="Character2Image" Stretch="Uniform"/>
                        </Border>
                        <TextBlock Text="Персонаж 2" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    </StackPanel>
                </Button>

                <!-- Персонаж 3 -->
                <Button Grid.Row="1" Grid.Column="0"
                        x:Name="Character3Button"
                        Style="{StaticResource CharacterButtonStyle}"
                        Click="Character3Button_Click">
                    <StackPanel>
                        <Border Background="White" Height="130" CornerRadius="5" Margin="5">
                            <Image x:Name="Character3Image" Stretch="Uniform"/>
                        </Border>
                        <TextBlock Text="Персонаж 3" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    </StackPanel>
                </Button>

                <!-- Персонаж 4 -->
                <Button Grid.Row="1" Grid.Column="1"
                        x:Name="Character4Button"
                        Style="{StaticResource CharacterButtonStyle}"
                        Click="Character4Button_Click">
                    <StackPanel>
                        <Border Background="White" Height="130" CornerRadius="5" Margin="5">
                            <Image x:Name="Character4Image" Stretch="Uniform"/>
                        </Border>
                        <TextBlock Text="Персонаж 4" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    </StackPanel>
                </Button>
            </Grid>

            <!-- === ПРАВАЯ ЧАСТЬ: НАСТРОЙКИ === -->
            <Border Grid.Column="1" Background="#FAFAFA" CornerRadius="10" Padding="15" Margin="10,0,0,0">
                <StackPanel VerticalAlignment="Top">
                    <TextBlock Text="Город для погоды" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBox x:Name="CityTextBox" 
                             Text="Moscow"
                             Style="{StaticResource SettingsTextBox}"
                             Width="180"
                             HorizontalAlignment="Left"/>

                    <TextBlock Text="Тема" FontWeight="SemiBold" Margin="0,15,0,5"/>
                    <ComboBox Width="180" HorizontalAlignment="Left" SelectedIndex="0">
                        <ComboBoxItem>Светлая</ComboBoxItem>
                        <ComboBoxItem>Тёмная</ComboBoxItem>
                    </ComboBox>

                    <TextBlock Text="Язык" FontWeight="SemiBold" Margin="0,15,0,5"/>
                    <ComboBox Width="180" HorizontalAlignment="Left" SelectedIndex="0">
                        <ComboBoxItem>Русский</ComboBoxItem>
                        <ComboBoxItem>English</ComboBoxItem>
                    </ComboBox>

                    <!-- Заглушка под будущие настройки -->
                    <Button Content="Сбросить настройки" 
                            Width="180" Height="35" 
                            Margin="0,25,0,0"
                            Background="#E74C3C" Foreground="White" 
                            FontWeight="Bold" Cursor="Hand"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Кнопки OK / Отмена -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,25,0,0">
            <Button Content="OK" Width="110" Height="40" Margin="8"
                    Background="#4A7C59" Foreground="White" FontWeight="Bold"
                    Click="OkButton_Click" Cursor="Hand"/>
            <Button Content="Отмена" Width="110" Height="40" Margin="8"
                    Background="#CCCCCC" Foreground="#333333" FontWeight="Bold"
                    Click="CancelButton_Click" Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>