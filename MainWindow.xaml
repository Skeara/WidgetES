<Window x:Class="WidgetES.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WidgetES"
        mc:Ignorable="d"
        Title="WidgetES"
        Height="500" Width="350"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        Topmost="True"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Window.Resources>
        <Style x:Key="IconButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#404040"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5"
                                BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#505050"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#606060"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border Background="Transparent"
            CornerRadius="10"
            BorderBrush="Transparent"
            BorderThickness="1"
            Margin="5">

        <!-- Всё в одном Grid — слои накладываются -->
        <Grid>
            <!-- 1. ПЕРСОНАЖ — НА ФОНЕ (сзади) -->
            <Image x:Name="CharacterImage"
                   Stretch="UniformToFill"
                   Panel.ZIndex="0"
                   Margin="0"/>

            <!-- 2. ПЛАНШЕТ С ЧАСАМИ — ПОВЕРХ ПЕРСОНАЖА -->
            <!-- 2. ПЛАНШЕТ С ЧАСАМИ И КНОПКАМИ ПО БОКАМ -->
            <Grid VerticalAlignment="Top" Margin="15,190,10,0" Panel.ZIndex="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <!-- Левые кнопки -->
                    <ColumnDefinition Width="*"/>
                    <!-- Планшет -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- Правые кнопки -->
                </Grid.ColumnDefinitions>

                <!-- Левые кнопки -->
                <StackPanel Grid.Column="0" VerticalAlignment="Center" Margin="5,0,0,0">
                    <Button x:Name="TimerButton" Width="60" Height="40" Margin="0,5" 
                Style="{StaticResource IconButtonStyle}" Click="TimerButton_Click" ToolTip="Таймер">
                        <TextBlock Text="🕒" FontSize="20"/>
                    </Button>
                    <Button x:Name="NotesButton" Width="60" Height="40" Margin="0,5" 
                Style="{StaticResource IconButtonStyle}" Click="NotesButton_Click" ToolTip="Заметки">
                        <TextBlock Text="📝" FontSize="20"/>
                    </Button>
                    <Button x:Name="WeatherButton" Width="60" Height="40" Margin="0,5" 
                Style="{StaticResource IconButtonStyle}" Click="WeatherButton_Click" ToolTip="Погода">
                        <TextBlock x:Name="WeatherText" Text="🌡" FontSize="18"/>
                    </Button>
                </StackPanel>

                <!-- Планшет с часами -->
                <Border Grid.Column="1" CornerRadius="10" BorderThickness="2" Height="221">
                    <Grid x:Name="TabletGrid" Margin="15">
                        <!-- ЧАСЫ -->
                        <Grid x:Name="TimePanel">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" x:Name="TimeText" Text="23:55"
                       FontSize="48" FontWeight="Bold" Foreground="White"
                       HorizontalAlignment="Center" Margin="0,30,0,5"/>
                            <TextBlock Grid.Row="1" x:Name="DateText" Text="04.11.25"
                       FontSize="36" FontWeight="SemiBold" Foreground="#CCCCCC"
                       HorizontalAlignment="Center" Margin="0,0,0,30"/>
                        </Grid>

                        <!-- ПАНЕЛЬ ДЛЯ ИНФОРМАЦИИ -->
                        <Grid x:Name="InfoPanel" Visibility="Collapsed" Background="Transparent">
                            <ScrollViewer VerticalScrollBarVisibility="Hidden"
                  HorizontalScrollBarVisibility="Disabled"
                  PanningMode="VerticalOnly"
                  Margin="10" MaxHeight="150">
                                <!-- Скрываем полосу, но оставляем колёсико -->
                                <ScrollViewer.Resources>
                                    <Style TargetType="ScrollBar">
                                        <Setter Property="Opacity" Value="0"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Opacity" Value="0.5"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </ScrollViewer.Resources>

                                <!-- Контейнер с центрированием -->
                                <StackPanel x:Name="NotesContainer"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    MaxWidth="280">
                                    <StackPanel.Resources>
                                        <!-- Убираем перенос для всех TextBlock -->
                                        <Style TargetType="TextBlock">
                                            <Setter Property="TextWrapping" Value="Wrap"/>
                                            <Setter Property="TextAlignment" Value="Center"/>
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="FontSize" Value="16"/>
                                            <Setter Property="Margin" Value="0,5"/>
                                        </Style>
                                    </StackPanel.Resources>
                                </StackPanel>
                            </ScrollViewer>
                        </Grid>
                    </Grid>
                </Border>

                <!-- Правые кнопки -->
                <StackPanel Grid.Column="2" VerticalAlignment="Center">
                    <Button x:Name="SystemButton" Width="60" Height="40" Margin="0,5" 
                Style="{StaticResource IconButtonStyle}" Click="SystemButton_Click" ToolTip="Система">
                        <TextBlock x:Name="SystemText" Text="⚡" FontSize="18"/>
                    </Button>
                    <Button x:Name="SettingsButton" Width="60" Height="40" Margin="0,5" 
                Style="{StaticResource IconButtonStyle}" Click="SettingsButton_Click" ToolTip="Настройки">
                        <TextBlock Text="⚙" FontSize="20"/>
                    </Button>
                    <Button x:Name="HelpButton" Width="60" Height="40" Margin="0,5" 
                Style="{StaticResource IconButtonStyle}" Click="HelpButton_Click" ToolTip="Помощь">
                        <TextBlock Text="?" FontSize="20" FontWeight="Bold"/>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- 3. ПРИВЕТСТВИЕ — ПОВЕРХ ПЛАНШЕТА -->
            <Border Background="#4A7C59"
                    Height="40"
                    VerticalAlignment="Bottom"
                    Margin="15,0,15,20"
                    CornerRadius="5"
                    Panel.ZIndex="2">
                <TextBlock x:Name="GreetingText"
                           Text="Привет, пользователь."
                           Foreground="White"
                           FontSize="14"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"
                           Margin="10,0,0,0"/>
            </Border>
        </Grid>
    </Border>
</Window>